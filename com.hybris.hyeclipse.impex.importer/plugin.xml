<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.core.expressions.propertyTesters">
		<propertyTester
			class="com.hybris.hyeclipse.impex.importer.testers.ImpexPropertyTester"
			id="com.hybris.hyeclipse.impex.importer.restStatus"
			namespace="com.hybris.hyeclipse.impex.importer"
			properties="isImpex"
			type="java.lang.Object">
		</propertyTester>
	</extension>
   
	<extension point="org.eclipse.ui.handlers">
		<handler
			commandId="com.hybris.hyeclipse.impex.importer.commands.impexImport"
			class="com.hybris.hyeclipse.impex.importer.handlers.ImpexImportHandler">
		</handler>
		
		<handler
			commandId="com.hybris.hyeclipse.impex.importer.commands.impexImportWithMacro"
			class="com.hybris.hyeclipse.impex.importer.handlers.ImpexImportWithMacroHandler">
		</handler>
	</extension>
      
	<extension point="org.eclipse.ui.menus">
		<menuContribution 
			id="com.hybris.hyeclipse.menuContribution.impexImport"
			locationURI="popup:org.eclipse.ui.popup.any?after=additions">
			<command
				commandId="com.hybris.hyeclipse.impex.importer.commands.impexImport"
				label="[y] Impex Import"
				style="push" icon="icons/hybris.ico">
				<visibleWhen>
					<test forcePluginActivation="true"
						property="com.hybris.hyeclipse.impex.importer.isImpex">
					</test>
				</visibleWhen>
			</command>
		</menuContribution>
		
		<menuContribution 
			id="com.hybris.hyeclipse.menuContribution.impexImportWithMacro"
			locationURI="popup:org.eclipse.ui.popup.any?after=additions">
			<command
				commandId="com.hybris.hyeclipse.impex.importer.commands.impexImportWithMacro"
				label="[y] Impex Import with Macro..."
				style="push" icon="icons/hybris.ico">
				<visibleWhen>
					<test forcePluginActivation="true"
						property="com.hybris.hyeclipse.impex.importer.isImpex">
					</test>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
</plugin>
