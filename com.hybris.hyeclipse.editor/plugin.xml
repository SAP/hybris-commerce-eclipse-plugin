<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension point="org.eclipse.jdt.ui.cleanUps">
		<cleanUp id="com.hybris.hyeclipse.editor.copyright.cleanup"
			class="com.hybris.hyeclipse.editor.copyright.CopyrightUpdaterCleanUp">
		</cleanUp>

		<cleanUpOptionsInitializer
			class="com.hybris.hyeclipse.editor.copyright.CopyrightOnSaveOptionsInitializer"
			cleanUpKind="saveAction">
		</cleanUpOptionsInitializer>

		<cleanUpConfigurationUI
			class="com.hybris.hyeclipse.editor.copyright.page.CopyrightTabPage" name="[y] Hybris actions"
			cleanUpKind="saveAction">
		</cleanUpConfigurationUI>
	</extension>
	
	<extension
      point = "org.eclipse.ui.preferencePages">
       <page id="com.hybris.hyeclipse.editor.preferences.EditorPreferencePage"
	    	class="com.hybris.hyeclipse.editor.preferences.EditorPreferencePage"
        	category="com.hybris.yps.hyeclipse.preferences.HyEclipsePreferencePage"
        	name="[y] Editor Preferences">
       </page>
   </extension>
   
   	<extension
		point="org.eclipse.core.runtime.preferences">
		<initializer
			class="com.hybris.hyeclipse.editor.preferences.EditorPreferenceInitializer"/>
	</extension>
</plugin>